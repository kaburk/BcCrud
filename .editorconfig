# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{php,html,htm,jade,pug,ctp,md,css,sass,scss,less,styl,js,jsx,ts,tsx}]
indent_style = tab
indent_size = 4
